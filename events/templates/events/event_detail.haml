-extends "base.haml"

-block content
  %h1= event.title
  %hr

  %p
    %b
      -if event.date
        =event.date
      -else
        No date yet for this event
      \-
      -if event.time
        =event.time
      -else
        no hours yet for this event

  %p
    %i
      -if event.location_address
        =event.location_address
      -else
        No location yet for this event, don't hesitate to suggest one!

  %p= event.description
