-extends "base.haml"

-block content
  .row
    .col-md-9
      %h1= event.title
      %hr

      %p
        %b
          -if event.date
            =event.date
          -else
            No date yet for this event
          \-
          -if event.time
            =event.time
          -else
            no hours yet for this event

      %p
        %i
          -if event.location_address
            =event.location_address
          -else
            No location yet for this event, don't hesitate to suggest one!

      %p= event.description

    .col-md-3
      %h1 Attendies
      %hr

      %div{style: "margin-right: 0px; margin-left: 0px; border-color: #ddd; border-width: 1px; border-radius: 4px 4px 4px 4px; box-shadow: none; border-style: solid; position: relative; padding: 3px 15px 15px;"}
        %form.form
          -csrf_token
          %h4 Respond to this event
          .form-group
            %label{for: "name"} Name:
            %input.form-control{type: "text"}

          .form-group
            %label.radio-inline
              %input{type: "radio", name: "yesnomaybe", value: "yes", checked: "true"} Yes
            %label.radio-inline
              %input{type: "radio", name: "yesnomaybe", value: "no"} No
            %label.radio-inline
              %input{type: "radio", name: "yesnomaybe", value: "maybe"} Maybe

          %input.btn.btn-primary{type: "submit", value: "Respond"}
